    {
        "type": "function",
        "function": {
            "name": "air_condition_control",
            "description": "控制空调的开关、温度、模式和风速以及状态查询",
            "parameters": {
                "type": "object",
                "properties": {
                    "action": {
                        "type": "string",
                        "description": "空调控制：开启-open，关闭-close，功能设置-setting，查询当前状态-query",
                        "enum": [
                            "open",
                            "close",
                            "setting",
                            "query"
                        ]
                    },
                    "temperature": {
                        "type": "string",
                        "description": "设置空调温度：-为降低，+为升高，否则为具体值"
                    },
                    "mode": {
                        "type": "string",
                        "description": "设置空调模式，选项：自动、制冷、制热、抽湿、送风",
                        "enum": [
                            "自动",
                            "制冷",
                            "制热",
                            "抽湿",
                            "送风"
                        ]
                    },
                    "fanSpeed": {
                        "type": "string",
                        "description": "设置空调风速：范围1-100，精度1，-为降低，+为升高，否则为具体值"
                    },
                    "brand": {
                        "type": "string",
                        "description": "空调品牌信息，美的或者海尔",
                        "enum": [
                            "美的",
                            "海尔"
                        ]
                    },
                    "loc": {
                        "type": "string",
                        "description": "空调位置信息，例如客厅、卧室、浴室、厨房、儿童房等"
                    },
                    "index": {
                        "type": "string",
                        "description": "空调的序号，只能为整数"
                    },
                    "isAll": {
                        "type": "boolean",
                        "description": "是否控制所有空调，true为控制所有空调，false为控制单个空调"
                    }
                },
                "required": [
                    "action"
                ]
            }
        }
    },
