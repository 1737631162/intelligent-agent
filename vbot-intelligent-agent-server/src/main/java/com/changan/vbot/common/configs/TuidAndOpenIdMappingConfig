package com.changan.vbot.common.configs;

import com.changan.vbot.service.dto.AgentHomeHuOpenMapDTO;
import lombok.Data;
import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.context.annotation.Configuration;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

@ConfigurationProperties(prefix = "home.hudemo")
@Configuration
@Data
public class TuidAndOpenIdMappingConfig {
    private List<AgentHomeHuOpenMapDTO> openMap;

    private static Map<String, String> tuidToOpenIdMap = new HashMap<>();

    public void setOpenMap(List<AgentHomeHuOpenMapDTO> openMap) {
        this.openMap = openMap;
        openMap.forEach(map -> tuidToOpenIdMap.put(map.getTuid(), map.getOpenId()));
    }

    public String getOpenId(String tuid) {
        return tuidToOpenIdMap.get(tuid);
    }
}
